<% if @product.has_variants? %>

<div id="product-variant-specs" class="col-md-6">
  <h6 class="product-section-title">Specs</h6>
  <div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th style="min-width:150px"></th>
        
          <% @product.variants.each do |variant| %>
            <th><small><%=variant.sku.to_s%></small></th>
          <% end %>
          
        </tr>
      </thead>
  
      <tbody>

        <!-- Only display for pulleys -->
        <% unless @product.variants.first.pulley_diameter.blank? %>
          <tr> 
            <td><small><b>Pulley Diameter:</b></small></td>
            <% @product.variants.each do |variant| %>
            <td><small><%= variant.pulley_diameter.blank? ? "" : "#{variant.pulley_diameter} mm" %><small></td>
            <% end %>
          </tr>
        
          <tr> 
            <td><small><b>Rope Diameter:</b></small></td>
            <% @product.variants.each do |variant| %>
            <td><small><%= variant.rope_diameter ? "#{variant.rope_diameter} mm" : "" %><small></td>
            <% end %>
          </tr>
        
          <!-- Only display for winches -->
          <% else %>  
        
          <tr>
            <td><small><b>Rope Capacity 1st Layer:</b></small></td>
            <% @product.variants.each do |variant| %>
            <td><small><%= variant.rope_capacity_first_layer ? "#{variant.rope_capacity_first_layer} m" : "" %><small></td>
            <% end %>
          </tr>

          <tr>
            <td><small><b>Rope Capacity Total:</b></small></td>
            <% @product.variants.each do |variant| %>
            <td><small><%= variant.rope_capacity_total ? "#{variant.rope_capacity_total} m" : "" %><small></td>
            <% end %>
          </tr>
        
          <tr> 
            <td><small><b>Rope Diameter:</b></small></td>
            <% @product.variants.each do |variant| %>
            <td><small><%= variant.rope_diameter ? "#{variant.rope_diameter} mm" : "" %><small></td>
            <% end %>
          </tr>
        
          <tr>
            <td><small><b>No. of Layers:</b></small></td>
            <% @product.variants.each do |variant| %>
            <td><small><%= variant.number_of_layers || "" %><small></td>
            <% end %>
          </tr>
        
          <tr>
            <td><small><b>Ratio:</b></small></td>
            <% @product.variants.each do |variant| %>
            <td><small><%= variant.ratio || "" %><small></td>
            <% end %>
          </tr>
        
          <tr>
            <td><small><b>Required Effort:</b></small></td>
            <% @product.variants.each do |variant| %>
      	    <td><small><%= variant.required_effort ? "#{variant.required_effort} N" : "" %><small></td>
	  
            <% end %>
          </tr>
        <% end %> 
        
        <!--Display for everything -->       
        <tr>
          <td><small><b>Weight:</b></small></td>
            <% @product.variants.each do |variant| %>
            <td>
              <small><%= variant.weight ? "#{variant.weight} Kg" : "" %></small>
            </td>
          <% end %>
        </tr>
        <tr> 
          <td><small><b>Product Dimensions:</b></small></td>
          <% @product.variants.each do |variant| %>
            <td>
              <small>
                <%= variant.height ? "#{variant.width.to_i} x" : "" %>
                <%= variant.width ? "#{variant.width.to_i} x" : "" %>
                <%= variant.depth ? "#{variant.depth.to_i} mm" : "" %>
              </small>
            </td>
          <% end %>
        </tr> 
        <tr>
          <td><small><b>Price:</b></small></td>
          <% @product.variants.each do |variant| %>
          <td><small><b><%= variant.price ? number_to_currency(variant.price, :unit => 'Â£') : "" %></b></small></td>
          <% end %>
        </tr>
      </tbody>
  
    </table>
  </div>

</div>

<br>
<% end %>